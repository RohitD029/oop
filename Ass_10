#include<iostream>
using namespace std;

class Employee
{
    private:
    int age;
    int salary1,salary2,new_salary1,new_salary2;
    int Yearsofservice;
    string name;
    public:
    void EnterdetailsA()
    {
        cout<<"Enter the name of Employee 1: "<<endl;
        cin>>name;
        cout << "Enter the age of Employee: "<<endl;;
        cin >> age;
        cout << "Enter the years of service: "<<endl;
        cin >> Yearsofservice;
        cout << "Enter the salary of Employee: "<<endl;
        cin >> salary1;
    }
    void displaydetailA()
    {
        cout << "\nEmployee Details:" << endl;
        cout << "Name: " << name << endl;
        cout << "Age: " << age << endl;
        cout << "Years of Service: " << Yearsofservice << endl;
        cout << "Salary: " << salary1 << endl;
    }
    void EnterdetailsB()
    {
        cout<<"Enter the name of Employee 2: "<<endl;
        cin>>name;
        cout << "Enter the age of Employee: "<<endl;;
        cin >> age;
        cout << "Enter the years of service: "<<endl;
        cin >> Yearsofservice;
        cout << "Enter the salary of Employee: "<<endl;
        cin >> salary2;
    }
    void displaydetailB()
    {
        cout << "\nEmployee Details:" << endl;
        cout << "Name: " << name << endl;
        cout << "Age: " << age << endl;
        cout << "Years of Service: " << Yearsofservice << endl;
        cout << "Salary: " << salary2 << endl;
    }
    void salaryinthousands()
    {
        cout<<"Salary in Thousands"<<endl;
        newsalary1=(salary1)/1000;
        cout<<"Salary of Employee 1: "<<new_salary1<<endl;
        newsalary2=(salary2)/1000;
        cout<<"\nSalary of Employee 2: "<<new_salary2<<endl;
    }  
};
int main()
{
    Employee s1;
    s1.EnterdetailsA();
    s1.displaydetailA();
    s1.EnterdetailsB();
    s1.displaydetailB();
    s1.salaryinthousands();
}
#Output:
Enter the name of Employee 1: 
Rohit
Enter the age of Employee:
19
Enter the years of service:
2
Enter the salary of Employee:
800000

Employee Details:
Name: Rohit
Age: 19
Years of Service: 2
Salary: 800000

Enter the name of Employee 2:
abhi
Enter the age of Employee:
26
Enter the years of service:
2
Enter the salary of Employee:
1400000

Employee Details:
Name: abhi
Age: 26
Years of Service: 2
Salary: 1400000

Salary in Thousands
Salary of Employee 1: 800000
